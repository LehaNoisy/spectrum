<UserControl
    x:Class="Spectrum.Demo.Views.Editors.DerivedColourView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Spectrum.Demo.Views.Editors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:micro="using:Caliburn.Micro"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Border Background="{Binding Converter={StaticResource ToBrush}, Mode=OneWay}" Padding="24,12,12,12">
        <Grid>
            <TextBlock Text="{Binding Converter={StaticResource ColorHex}}" Style="{StaticResource BodyTextBlockStyle}" 
                                           HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"
                                           Foreground="{Binding Converter={StaticResource ForegroundText}}"/>
        </Grid>
    </Border>
</UserControl>
