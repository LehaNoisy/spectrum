<Application
    x:Class="Spectrum.Demo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convereters="using:Spectrum.Universal.Converters">
    
    <Application.Resources>

        <convereters:ComplimentConverter x:Key="Compliment" />
        <convereters:ShiftLightnessConverter x:Key="ShiftLightness" />

        <Color x:Key="AccentColor">#FF0088D1</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        
        <SolidColorBrush x:Key="ComplimentaryAccentBrush" 
                         Color="{Binding Source={StaticResource AccentColor}, Converter={StaticResource Compliment}}"/>

        <SolidColorBrush x:Key="LightenedAccentBrush" 
                         Color="{Binding Source={StaticResource AccentColor}, Converter={StaticResource ShiftLightness}, ConverterParameter=0.3}"/>

    </Application.Resources>

</Application>
